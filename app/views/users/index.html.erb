<% content_for :title, "Users" %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="mb-0">Users</h1>
  <%= link_to 'New User', new_user_path, class: 'btn btn-success' %>
</div>

<div class="table-responsive">
  <table class="table table-hover">
    <thead class="table-light">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th class="text-end">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= mail_to user.email %></td>
          <td class="text-end">
            <%= link_to 'Show', user, class: 'btn btn-sm btn-primary me-1' %>
            <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-sm btn-secondary me-1' %>
            <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
