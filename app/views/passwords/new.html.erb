<% content_for :title, "Forgot Password" %>

<div class="max-w-md mx-auto bg-white rounded-2xl shadow-xl p-8 sm:p-10">
  <div class="mb-6 text-center space-y-2">
    <h1 class="text-3xl font-semibold text-gray-900">Forgot your password?</h1>
    <p class="text-sm text-gray-500">
      Enter your Northwestern email address and weâ€™ll send you a link to create a new password.
    </p>
  </div>

  <%= form_with url: passwords_path, scope: :password, local: true, class: "space-y-5" do |form| %>
    <div>
      <%= form.label :email_address, "Email address", class: "block text-sm font-medium text-gray-700" %>
      <%= form.email_field :email_address,
                           required: true,
                           autofocus: true,
                           autocomplete: "username",
                           value: params.dig(:password, :email_address),
                           class: "mt-1 block w-full rounded-lg border border-gray-300 bg-gray-50 px-4 py-3 text-base text-gray-900 placeholder-gray-400 shadow-sm transition focus:border-blue-500 focus:bg-white focus:ring-2 focus:ring-blue-500 focus:ring-offset-1 focus:outline-none" %>
    </div>

    <div class="pt-4 text-center">
      <%= form.submit "Email reset instructions",
                      class: "inline-flex items-center justify-center rounded-md bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 text-sm transition" %>
    </div>
  <% end %>

  <div class="mt-8 text-center text-sm text-gray-500">
    <span>Remembered your password?</span>
    <%= link_to "Sign in", new_session_path,
                class: "ml-1 rounded px-2 py-1 text-blue-600 transition hover:text-blue-700 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 focus-visible:ring-offset-2" %>
  </div>
</div>
