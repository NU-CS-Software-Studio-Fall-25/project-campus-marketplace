<% content_for :title, "Sign In" %>

<div class="max-w-md mx-auto bg-white rounded-2xl shadow-xl p-8 sm:p-10">
  <div class="mb-6 text-center">
    <h1 class="text-3xl font-semibold text-gray-900">Welcome back</h1>
    <p class="mt-2 text-sm text-gray-500">Sign in with your Northwestern email to continue.</p>
  </div>

  <%= form_with url: session_path, local: true, class: "space-y-5" do |form| %>
    <div>
      <%= form.label :email_address, "Email address", class: "block text-sm font-medium text-gray-700" %>
      <%= form.email_field :email_address,
                           required: true,
                           autofocus: true,
                           autocomplete: "username",
                           value: params[:email_address],
                           class: "mt-1 block w-full rounded-lg border border-gray-300 bg-gray-50 px-4 py-3 text-base text-gray-900 placeholder-gray-400 shadow-sm transition focus:border-blue-500 focus:bg-white focus:ring-2 focus:ring-blue-500 focus:ring-offset-1 focus:outline-none" %>
      <p class="mt-2 text-xs text-gray-500">Use your Northwestern email (example@u.northwestern.edu).</p>
    </div>

    <div>
      <%= form.label :password, "Password", class: "block text-sm font-medium text-gray-700" %>
      <%= form.password_field :password,
                              required: true,
                              autocomplete: "current-password",
                              maxlength: 72,
                              class: "mt-1 block w-full rounded-lg border border-gray-300 bg-gray-50 px-4 py-3 text-base text-gray-900 placeholder-gray-400 shadow-sm transition focus:border-blue-500 focus:bg-white focus:ring-2 focus:ring-blue-500 focus:ring-offset-1 focus:outline-none" %>
      <p class="mt-2 text-xs text-gray-500">Minimum 8 characters recommended.</p>
    </div>

    <div class="pt-4 pb-4 text-center">
      <%= form.submit "Sign in",
                      class: "inline-flex items-center justify-center rounded-md bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 text-sm transition" %>
    </div>
  <% end %>

  <div class="mt-8 flex flex-col items-center gap-2 text-sm text-gray-500">
    <%= link_to "Create an account", new_user_path,
                class: "rounded px-2 py-1 text-blue-600 transition hover:text-blue-700 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 focus-visible:ring-offset-2" %>
    <%= link_to "Forgot password?", new_password_path,
                class: "rounded px-2 py-1 text-gray-500 transition hover:text-gray-700 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 focus-visible:ring-offset-2" %>
  </div>
</div>
