<% content_for :title, "Sign In" %>

<div class="max-w-md mx-auto bg-white rounded-2xl shadow-xl p-8 sm:p-10">
  <div class="mb-6 text-center">
    <h1 class="text-3xl font-semibold text-gray-900">Welcome back</h1>
    <p class="mt-2 text-sm text-gray-500">Sign in with your Northwestern email to continue.</p>
  </div>

  <div class="space-y-4">
    <%= button_to "/auth/google_oauth2",
                  method: :post,
                  data: { turbo: false },
                  class: "flex w-full items-center justify-center gap-3 rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm font-semibold text-gray-700 shadow-sm transition hover:bg-gray-50 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 focus-visible:ring-offset-2" do %>
      <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 533.5 544.3" aria-hidden="true">
        <path d="M533.5 278.4c0-18.5-1.5-37-4.6-54.8H272v103.8h146.9c-6.3 34.4-25.6 63.4-54.5 82.8v68h88.2c51.6-47.5 80.9-117.8 80.9-199.8z" fill="#4285f4"/>
        <path d="M272 544.3c73.6 0 135.4-24.2 180.5-65.9l-88.2-68c-24.5 16.5-56 26-92.3 26-70.9 0-131-47.9-152.4-112.2h-91v70.7c44.8 88.7 137 149.4 243.4 149.4z" fill="#34a853"/>
        <path d="M119.6 324.1c-10.2-30-10.2-62.4 0-92.4v-70.7h-91c-38.1 75.6-38.1 157.9 0 233.5l91-70.4z" fill="#fbbc04"/>
        <path d="M272 107.7c38.9-.6 76.3 14.8 104.7 42.7l78-78C407.1 24 344.2-2.1 272 0 165.6 0 73.4 60.7 28.6 149.4l91 70.7C141 155.8 201.1 107.7 272 107.7z" fill="#ea4335"/>
      </svg>
      <span>Continue with Google</span>
    <% end %>
    <div class="relative py-2 text-center">
      <span class="absolute inset-x-0 top-1/2 -translate-y-1/2 border-t border-gray-200"></span>
      <span class="relative bg-white px-3 text-xs uppercase tracking-wider text-gray-500">or</span>
    </div>
  </div>

  <%= form_with url: session_path, local: true, class: "space-y-5" do |form| %>
    <div>
      <%= form.label :email_address, "Email address", class: "block text-sm font-medium text-gray-700" %>
      <%= form.email_field :email_address,
                           required: true,
                           autofocus: true,
                           autocomplete: "username",
                           value: params[:email_address],
                           class: "mt-1 block w-full rounded-lg border border-gray-300 bg-gray-50 px-4 py-3 text-base text-gray-900 placeholder-gray-400 shadow-sm transition focus:border-blue-500 focus:bg-white focus:ring-2 focus:ring-blue-500 focus:ring-offset-1 focus:outline-none" %>
      <p class="mt-2 text-xs text-gray-500">Use your Northwestern email (example@u.northwestern.edu).</p>
    </div>

    <div>
      <%= form.label :password, "Password", class: "block text-sm font-medium text-gray-700" %>
      <%= form.password_field :password,
                              required: true,
                              autocomplete: "current-password",
                              maxlength: 72,
                              class: "mt-1 block w-full rounded-lg border border-gray-300 bg-gray-50 px-4 py-3 text-base text-gray-900 placeholder-gray-400 shadow-sm transition focus:border-blue-500 focus:bg-white focus:ring-2 focus:ring-blue-500 focus:ring-offset-1 focus:outline-none" %>
      <p class="mt-2 text-xs text-gray-500">Minimum 8 characters recommended.</p>
    </div>

    <div class="pt-4 pb-4 text-center">
      <%= form.submit "Sign in",
                      class: "inline-flex items-center justify-center rounded-md bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 text-sm transition" %>
    </div>
  <% end %>

  <div class="mt-8 flex flex-col items-center gap-2 text-sm text-gray-500">
    <%= link_to "Create an account", new_user_path,
                class: "rounded px-2 py-1 text-blue-600 transition hover:text-blue-700 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 focus-visible:ring-offset-2" %>
    <%= link_to "Forgot password?", new_password_path,
                class: "rounded px-2 py-1 text-gray-500 transition hover:text-gray-700 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 focus-visible:ring-offset-2" %>
    <%= form_with url: confirmation_path,
                  scope: :confirmation,
                  method: :post,
                  local: true,
                  class: "mt-4 w-full space-y-2" do |form| %>
      <div>
        <%= form.label :email_address, "Didn't get a confirmation email?", class: "block text-xs font-medium text-gray-500" %>
        <div class="mt-1 flex gap-2">
          <%= form.email_field :email_address,
                               required: true,
                               autocomplete: "email",
                               placeholder: "your@u.northwestern.edu",
                               class: "flex-1 rounded-lg border border-gray-300 px-3 py-2 text-sm focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500" %>
          <%= form.submit "Resend",
                          class: "rounded-md bg-gray-800 px-3 py-2 text-sm font-semibold text-white transition hover:bg-gray-700" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
