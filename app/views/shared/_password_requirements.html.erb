<% min_length ||= 8 %>

<ul class="mt-3 space-y-2 text-sm">
  <li class="flex items-center gap-2 text-gray-600" data-password-requirements-target="lengthItem">
    <span data-icon class="text-red-500 text-lg leading-none">✕</span>
    <span>At least <%= min_length %> characters long</span>
  </li>
  <li class="flex items-center gap-2 text-gray-600" data-password-requirements-target="lowercaseItem">
    <span data-icon class="text-red-500 text-lg leading-none">✕</span>
    <span>Includes a lowercase letter</span>
  </li>
  <li class="flex items-center gap-2 text-gray-600" data-password-requirements-target="uppercaseItem">
    <span data-icon class="text-red-500 text-lg leading-none">✕</span>
    <span>Includes an uppercase letter</span>
  </li>
  <li class="flex items-center gap-2 text-gray-600" data-password-requirements-target="numberItem">
    <span data-icon class="text-red-500 text-lg leading-none">✕</span>
    <span>Includes a number</span>
  </li>
  <li class="flex items-center gap-2 text-gray-600" data-password-requirements-target="specialItem">
    <span data-icon class="text-red-500 text-lg leading-none">✕</span>
    <span>Includes a special character (!@#$...)</span>
  </li>
</ul>
