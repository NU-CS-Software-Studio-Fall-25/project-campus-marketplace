<% hide_view = local_assigns.fetch(:hide_view, false) %>

<div id="<%= dom_id listing %>" class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300 ease-in-out">
  <%= link_to listing_path(listing), class: "block" do %>
    <div class="h-48 overflow-hidden">
      <%# Prefer an attached ActiveStorage image, fall back to image_url attribute, then site icon placeholder %>
      <% if defined?(ActiveStorage) && listing.respond_to?(:image) && listing.image.respond_to?(:attached?) && listing.image.attached? %>
        <%= image_tag listing.image.variant(resize_to_fill: [400, 300]), alt: listing.title, class: "w-full h-full object-cover" %>
      <% elsif listing.respond_to?(:image_url) && listing.image_url.present? %>
        <%= image_tag listing.image_url, alt: listing.title, class: "w-full h-full object-cover" %>
      <% else %>
        <%# inline SVG placeholder so we don't rely on any external image files %>
        <div class="w-full h-full bg-gray-200 flex items-center justify-center">
          <svg class="text-gray-400" role="img" aria-label="No image" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="80" height="80" focusable="false">
            <path fill="currentColor" d="M3 7a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V7zm5 2l2.5 3 1.5-2L15 15H5l3-6z"/>
          </svg>
        </div>
      <% end %>
    </div>
    <div class="p-4">
      <div class="flex justify-between items-start mb-2">
        <h5 class="text-lg font-bold text-gray-900"><%= listing.title %></h5>
        <div class="text-lg font-semibold text-green-600"><%= number_to_currency(listing.price || 0) %></div>
      </div>

      <p class="text-gray-700 text-sm mb-4 h-20 overflow-hidden"><%= truncate(listing.description, length: 120) %></p>
      <% if listing.user.present? %>
        <div class="text-gray-600 text-xs">
          <span>Seller: <%= listing.user.email_address %></span>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="p-4 bg-gray-50 border-t border-gray-200 flex justify-between items-center">
    <div>
      <% unless hide_view %>
        <%= link_to 'View', listing, class: 'text-sm font-medium text-blue-600 hover:text-blue-800' %>
      <% end %>
      <% if listing.user == current_user %>
        <% edit_classes = ['text-sm', 'font-medium', 'text-gray-600', 'hover:text-gray-800'] %>
        <% edit_classes << 'ml-4' unless hide_view %>
        <%= link_to 'Edit', edit_listing_path(listing), class: edit_classes.join(' ') %>
      <% end %>
    </div>
    <% if listing.user == current_user %>
      <div>
        <%= link_to 'Delete', listing, method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: 'text-sm font-medium text-red-600 hover:text-red-800' %>
      </div>
    <% end %>
  </div>
</div>
