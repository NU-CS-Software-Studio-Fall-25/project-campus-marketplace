<% seller = listing.user %>

<div id="<%= dom_id listing %>" class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300 ease-in-out">
  <% listing_back_params = request.query_parameters.slice("page", "q").delete_if { |_k, v| v.blank? } %>
  <%= link_to listing_path(listing, listing_back_params), class: "block" do %>
    <div class="h-48 overflow-hidden">
      <%# Prefer an attached ActiveStorage image, fall back to image_url attribute, then site icon placeholder %>
      <% if defined?(ActiveStorage) &&
            listing.respond_to?(:image) &&
            listing.image.respond_to?(:attached?) &&
            listing.image.attached? &&
            listing.image.variable? %>
        <%= image_tag listing.image.variant(resize_to_fill: [400, 300]), alt: listing.title, class: "w-full h-full object-cover" %>
      <% elsif listing.respond_to?(:image_url) && listing.image_url.present? %>
        <%= image_tag listing.image_url, alt: listing.title, class: "w-full h-full object-cover" %>
      <% else %>
        <%# inline SVG placeholder so we don't rely on any external image files %>
        <div class="w-full h-full bg-gray-200 flex items-center justify-center">
          <svg class="text-gray-400" role="img" aria-label="No image" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="80" height="80" focusable="false">
            <path fill="currentColor" d="M3 7a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V7zm5 2l2.5 3 1.5-2L15 15H5l3-6z"/>
          </svg>
        </div>
      <% end %>
    </div>
    <div class="p-4">
      <div class="flex justify-between items-start mb-2">
        <h5 class="text-lg font-bold text-gray-900"><%= listing.title %></h5>
        <div class="text-lg font-semibold text-green-600"><%= number_to_currency(listing.price || 0) %></div>
      </div>

      <p class="text-gray-700 text-sm mb-4 h-20 overflow-hidden"><%= truncate(listing.description, length: 120) %></p>
    </div>
  <% end %>

  <div class="p-4 bg-gray-50 border-t border-gray-200 space-y-3">
    <div class="text-sm text-gray-600">
      <span class="font-medium text-gray-800">Seller:</span>
      <%= seller&.full_name.presence || seller&.username || "Unknown seller" %>
    </div>

    <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
      <div class="flex flex-wrap items-center gap-3">
        <% if listing.user == current_user %>
          <%= link_to 'Edit',
                      edit_listing_path(listing),
                      class: 'inline-flex items-center justify-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-semibold text-gray-700 transition hover:bg-gray-100 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 focus-visible:ring-offset-1' %>
        <% end %>
      </div>
      <% if listing.user == current_user %>
        <%= button_to 'Delete',
                      listing,
                      method: :delete,
                      data: { turbo_confirm: 'Are you sure?' },
                      class: 'text-sm font-medium text-red-600 hover:text-red-800 bg-transparent border-0 p-0',
                      form: { class: 'inline-block' } %>
      <% end %>
    </div>
  </div>
</div>
