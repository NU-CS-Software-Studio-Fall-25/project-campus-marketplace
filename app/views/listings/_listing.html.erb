<div id="<%= dom_id listing %>" class="listing-card card">
  <%= link_to listing_path(listing), class: 'listing-link' do %>
    <div class="listing-image">
      <%# Prefer an attached ActiveStorage image, fall back to image_url attribute, then site icon placeholder %>
      <% if defined?(ActiveStorage) && listing.respond_to?(:image) && listing.image.respond_to?(:attached?) && listing.image.attached? %>
        <%= image_tag listing.image.variant(resize_to_fill: [400, 300]), alt: listing.title, class: 'img-fluid' %>
      <% elsif listing.respond_to?(:image_url) && listing.image_url.present? %>
        <%= image_tag listing.image_url, alt: listing.title, class: 'img-fluid' %>
      <% else %>
        <%# inline SVG placeholder so we don't rely on any external image files %>
        <svg class="placeholder-svg" role="img" aria-label="No image" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="120" height="120" focusable="false">
          <rect width="100%" height="100%" fill="#e9ecef"></rect>
          <g fill="#adb5bd">
            <path d="M3 7a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V7zm5 2l2.5 3 1.5-2L15 15H5l3-6z"/>
          </g>
        </svg>
      <% end %>
    </div>
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-start mb-2">
        <h5 class="card-title mb-0"><%= listing.title %></h5>
        <div class="listing-price text-success"><%= number_to_currency(listing.price || 0) %></div>
      </div>

      <p class="card-text listing-description"><%= truncate(listing.description, length: 120) %></p>
      <% if listing.user.present? %>
        <div class="listing-meta text-muted small">
          <span>Seller: <%= listing.user.email_address %></span>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="card-footer bg-transparent border-0 d-flex justify-content-between">
    <div>
      <%= link_to 'Show', listing, class: 'btn btn-sm btn-outline-primary me-2' %>
      <% if listing.user == current_user %>
        <%= link_to 'Edit', edit_listing_path(listing), class: 'btn btn-sm btn-outline-secondary me-2' %>
      <% end %>
    </div>
    <% if listing.user == current_user %>
      <div>
        <%= link_to 'Delete', listing, method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %>
      </div>
    <% end %>
  </div>
</div>
