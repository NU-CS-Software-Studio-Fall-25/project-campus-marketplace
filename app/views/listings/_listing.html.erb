<div id="<%= dom_id listing %>" class="card listing-card">
  <div class="card-body">
    <h5 class="card-title"><%= listing.title %></h5>
    <h6 class="card-subtitle mb-2 text-muted listing-meta">Price: <%= number_to_currency(listing.price || 0) %></h6>
    <p class="card-text"><%= simple_format(listing.description) %></p>
    <p class="card-text"><small class="text-muted">User ID: <%= listing.user_id %></small></p>
    <div class="mt-3">
      <%= link_to 'Show', listing, class: 'btn btn-sm btn-primary me-2' %>
      <%= link_to 'Edit', edit_listing_path(listing), class: 'btn btn-sm btn-secondary me-2' %>
      <%= link_to 'Delete', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
    </div>
  </div>
</div>
