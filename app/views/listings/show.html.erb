<%= render partial: "listing", locals: { listing: @listing, hide_view: true } %>

<% seller = @listing.user %>
<% if seller.present? %>
  <div class="mx-auto mt-8 w-full max-w-3xl">
    <div class="rounded-2xl border border-blue-100 bg-blue-50 p-6 shadow-sm">
      <h2 class="text-lg font-semibold text-blue-900">Seller contact</h2>
      <div class="mt-4 space-y-4">
        <div class="flex flex-wrap items-center gap-3">
          <span class="inline-flex items-center rounded-full bg-blue-100 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-blue-800">Email</span>
          <%= mail_to seller.email_address,
                      seller.email_address,
                      class: "text-base font-semibold text-blue-900 underline decoration-blue-300 underline-offset-4 hover:text-blue-700" %>
        </div>
        <% if seller.phone_number.present? %>
          <div class="flex flex-wrap items-center gap-3">
            <span class="inline-flex items-center rounded-full bg-blue-100 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-blue-800">Phone</span>
            <%= link_to seller.phone_number,
                        "tel:#{seller.phone_number}",
                        class: "text-base font-semibold text-blue-900 underline decoration-blue-300 underline-offset-4 hover:text-blue-700" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
