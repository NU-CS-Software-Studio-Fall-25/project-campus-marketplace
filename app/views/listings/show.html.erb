<%= render @listing %>

<div class="d-flex gap-2 mt-3">
  <%= link_to 'Edit', edit_listing_path(@listing), class: 'btn btn-secondary' %>
  <%= link_to 'Back to listings', listings_path, class: 'btn btn-outline-primary' %>
  <%= button_to 'Destroy listing', @listing, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
</div>
