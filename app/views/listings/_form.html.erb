<%= form_with(model: listing, local: true, html: { class: 'needs-validation' }) do |form| %>
  <% if listing.errors.any? %>
    <div class="form-error">
      <h5><%= pluralize(listing.errors.count, "error") %> prohibited this listing from being saved:</h5>
      <ul>
        <% listing.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control', id: 'Title' %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: 'form-label' %>
    <%= form.text_area :description, class: 'form-control', rows: 4, id: 'Description' %>
  </div>

  <div class="mb-3">
    <%= form.label :price, class: 'form-label' %>
    <%= form.number_field :price, class: 'form-control', step: '0.01', id: 'Price' %>
  </div>

  <div class="mb-3">
    <%= form.label :image, class: 'form-label' %>
    <%= form.file_field :image, class: 'form-control', direct_upload: true %>
    <% if listing.image.attached? %>
      <div class="form-text">Upload a new file to replace the current image.</div>
      <div class="mt-2 d-flex flex-column gap-2">
        <div class="current-image-preview">
          <% if listing.image.variable? %>
            <%= image_tag listing.image.variant(resize_to_limit: [400, 400]), class: 'img-thumbnail', alt: "#{listing.title} current image" %>
          <% else %>
            <%= link_to listing.image.filename, url_for(listing.image), target: "_blank", rel: "noopener" %>
          <% end %>
        </div>
        <div class="form-check">
          <%= form.check_box :remove_image, class: 'form-check-input', value: "1" %>
          <%= form.label :remove_image, "Remove current image", class: 'form-check-label' %>
        </div>
      </div>
    <% else %>
      <div class="form-text">Supported formats: JPG, PNG, GIF. Max 25MB.</div>
    <% end %>
  </div>

  <div class="d-flex gap-2">
    <%= form.submit listing.persisted? ? 'Update Listing' : 'Create Listing', class: 'btn btn-primary' %>
    <%= link_to 'Back', listings_path, class: 'btn btn-outline-secondary' %>
  </div>
<% end %>
