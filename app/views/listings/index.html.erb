<% content_for :title, "All Listings" %>

<div data-controller="listings-search"
     data-listings-search-results-url-value="<%= filter_listings_path %>"
     data-listings-search-suggestions-url-value="<%= suggestions_listings_path %>"
     class="space-y-6">
  <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
    <h1 class="text-3xl font-bold text-gray-800">All Listings</h1>
    <% if authenticated? %>
      <div>
        <%= link_to 'New listing', new_listing_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg shadow-md hover:shadow-lg transition-transform transform hover:-translate-y-px" %>
      </div>
    <% end %>
  </div>

  <%= form_with url: listings_path, method: :get, local: true,
                class: "space-y-6",
                data: { listings_search_target: "form", action: "submit->listings-search#submit" } do |form| %>
    <div class="flex w-full flex-col gap-3 sm:flex-row sm:items-center">
      <div class="relative flex-1">
        <%= form.label :q, "Search listings", class: "sr-only" %>
        <span class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-gray-400">
          <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-4.35-4.35m0 0A7 7 0 1010.3 16.7a7 7 0 006.35-6.35z" />
          </svg>
        </span>
        <%= form.search_field :q,
          value: @query,
          placeholder: "Search listings...",
          class: "w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 shadow-sm",
          data: { listings_search_target: "input", action: "input->listings-search#update" } %>
        <div data-listings-search-target="suggestions" class="absolute left-0 right-0 top-full z-20 hidden bg-white shadow-lg border border-gray-200 rounded-b-lg max-h-60 overflow-y-auto"></div>
      </div>
      <div class="flex items-center gap-2">
        <%= form.submit "Search", class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg shadow-md hover:shadow-lg transition-colors" %>
        <%= link_to "Clear", listings_path, class: "text-sm text-gray-500 hover:text-gray-700" %>
      </div>
      <div class="relative">
        <button type="button"
                class="inline-flex items-center gap-2 rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm font-semibold text-gray-700 shadow-sm transition hover:bg-gray-50 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 focus-visible:ring-offset-2"
                aria-label="Filter listings"
                data-action="click->listings-search#toggleFilters"
                data-listings-search-target="filtersButton">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3 5a1 1 0 011-1h8a1 1 0 110 2H7a1 1 0 01-1-1zm3 4a1 1 0 011-1h5a1 1 0 110 2h-5a1 1 0 01-1-1z" clip-rule="evenodd" />
          </svg>
          Filters
        </button>
        <div data-listings-search-target="filtersPanel"
             class="absolute right-0 z-20 mt-2 w-64 rounded-2xl border border-gray-200 bg-white p-4 shadow-xl hidden">
          <div class="space-y-6">
            <fieldset>
              <legend class="text-xs font-semibold uppercase tracking-wide text-gray-500">Categories</legend>
              <div class="mt-3 space-y-2">
                <% Listing.categories.keys.each do |category| %>
                  <% checkbox_id = "category_filter_#{category}" %>
                  <label for="<%= checkbox_id %>" class="flex items-center gap-2 text-sm text-gray-800">
                    <%= check_box_tag "categories[]",
                                      category,
                                      @category_filters.include?(category),
                                      id: checkbox_id,
                                      class: "rounded border-gray-300 text-blue-600 focus:ring-blue-500",
                                      data: { listings_search_target: "category", action: "input->listings-search#update" } %>
                    <span class="capitalize"><%= category.titleize %></span>
                  </label>
                <% end %>
              </div>
            </fieldset>

            <fieldset>
              <legend class="text-xs font-semibold uppercase tracking-wide text-gray-500">Price range</legend>
              <div class="mt-3 space-y-2">
                <% price_range_options.each do |key, option| %>
                  <% price_checkbox_id = "price_range_filter_#{key}" %>
                  <label for="<%= price_checkbox_id %>" class="flex items-center gap-2 text-sm text-gray-800">
                    <%= check_box_tag "price_ranges[]",
                                      key,
                                      @price_range_filters.include?(key),
                                      id: price_checkbox_id,
                                      class: "rounded border-gray-300 text-blue-600 focus:ring-blue-500",
                                      data: { listings_search_target: "priceRange", action: "input->listings-search#update" } %>
                    <span><%= option[:label] %></span>
                  </label>
                <% end %>
              </div>
            </fieldset>
          </div>
        </div>
      </div>
    </div>

    <div>
      <div class="<%= ["mb-2", @pagy.count.positive? ? nil : "hidden"].compact.join(" ") %>"
           data-listings-search-target="summary">
        <%= render partial: "listings/summary", locals: { pagy: @pagy } %>
      </div>

      <div id="listings"
           class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3"
           data-listings-search-target="results">
        <%= render partial: "listings/listings", locals: { listings: @listings, query: @query } %>
      </div>

      <div class="<%= ["mt-6 flex justify-center", @pagy.pages > 1 ? nil : "hidden"].compact.join(" ") %>"
           data-listings-search-target="pagination">
        <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
      </div>
    </div>
  <% end %>
</div>
