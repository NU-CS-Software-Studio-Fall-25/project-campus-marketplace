<% content_for :title, "All Listings" %>

<div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between mb-6">
  <h1 class="text-3xl font-bold text-gray-800">All Listings</h1>
  <div class="w-full md:flex-1">
    <%= form_with url: listings_path, method: :get, local: true, class: "flex flex-col sm:flex-row sm:items-center gap-2" do |form| %>
      <div class="relative flex-1">
        <%= form.label :q, "Search listings", class: "sr-only" %>
        <span class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-gray-400">
          <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-4.35-4.35m0 0A7 7 0 1010.3 16.7a7 7 0 006.35-6.35z" />
          </svg>
        </span>
        <%= form.search_field :q,
          value: @query,
          placeholder: "Search listingsâ€¦",
          class: "w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 shadow-sm" %>
      </div>
      <%= form.submit "Search", class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg shadow-md hover:shadow-lg transition-colors" %>
      <% if @query.present? %>
        <%= link_to "Clear", listings_path, class: "text-sm text-gray-500 hover:text-gray-700" %>
      <% end %>
    <% end %>
  </div>
  <% if authenticated? %>
    <div class="md:ml-4">
      <%= link_to 'New listing', new_listing_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg shadow-md hover:shadow-lg transition-transform transform hover:-translate-y-px" %>
    </div>
  <% end %>
</div>

<% if @listings.any? %>
  <div id="listings" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <%= render @listings %>
  </div>
<% else %>
  <div class="bg-blue-100 border-l-4 border-blue-500 text-blue-700 p-4" role="alert">
    <p class="font-bold">No listings yet</p>
    <p>Be the first to post a listing!</p>
  </div>
<% end %>
