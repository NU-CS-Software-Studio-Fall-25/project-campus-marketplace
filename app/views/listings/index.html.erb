<% content_for :title, "All Listings" %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="mb-0">All Listings</h1>
  <% if authenticated? %>
    <div>
      <%= link_to 'New listing', new_listing_path, class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>

<% if @listings.any? %>
  <div class="table-responsive">
    <table class="table table-striped table-hover table-listings">
      <thead class="table-primary">
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Price</th>
          <th>Seller</th>
          <th class="text-end">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @listings.each do |listing| %>
          <tr>
            <td><%= listing.title %></td>
            <td><%= truncate(listing.description, length: 80) %></td>
            <td><%= number_to_currency(listing.price || 0) %></td>
            <td><%= listing.user&.email_address || "Unknown" %></td>
            <td class="text-end">
              <%= link_to 'Show', listing, class: 'btn btn-sm btn-primary me-1' %>
              <% if listing.user == current_user %>
                <%= link_to 'Edit', edit_listing_path(listing), class: 'btn btn-sm btn-secondary me-1' %>
                <%= link_to 'Delete', listing, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="alert alert-info">No listings have been posted yet.</div>
<% end %>
